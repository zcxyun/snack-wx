/* components/product/product.wxss */
.l-card-container {
  width: 330rpx !important;
  padding: 0 0 20rpx 0 !important;
  background-color: #ffffff !important;
  box-shadow: 0rpx 0rpx 20rpx 0rpx rgba(9, 36, 66, 0.1) !important;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.l-card-img {
  width: 330rpx !important;
  height: 330rpx !important;
}

.l-card-title {
  margin-left: 20rpx !important;
  font-size: 28rpx;
}

.product-contianer {
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.summary {
  font-size: 24rpx;
  color: #777;
  margin-top: 15rpx;
  display: flex;
  width: 100%;
  flex-wrap: wrap;
}

.price-container {
  margin: 15rpx 0;
  height: 30rpx;
  width: 100%;
}

.price {
  margin-right: 10rpx;
}
