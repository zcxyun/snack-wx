.search-container {
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 750rpx;
  height: 100rpx;
  background: #fff;
  box-shadow: 0 0 3px 0 #e3e3e3;
}

.search {
  background: #f5f5f5;
  border-radius: 50rpx;
  width: 700rpx;
  height: 68rpx;
  color: #999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search > image {
  width: 28rpx;
  height: 28rpx;
}

.search > text {
  font-size: 32rpx;
  margin-left: 20rpx;
}
