<view class="container">
  <view class="avatar-box">
    <l-avatar
      wx:if="{{authorized}}"
      text="{{userInfo.nickName}}"
      placement="right"
      size="80"
      src="{{userInfo.avatarUrl}}"
      l-text-class="avatar-text" />
    <l-button
      wx:else
      special="{{true}}"
      open-type="getUserInfo"
      bind:getuserinfo="onGetUserInfo">
      <l-avatar
        size="80"
        icon="user"
        text="登录"
        icon-color="#2c61b4"
        l-text-class="avatar-text" />
    </l-button>
  </view>
  <view class="header-box">

  </view>
  <view class="menu-list">
    <l-list title="全部订单" icon="order" bind:lintap="onOrder" badge-count="8" badge-position="right" badge-max-count="99" />
    <l-list title="收货地址" icon="address" bind:lintap="onAddress" />
    <!-- <l-list title="评论" icon="comment" bind:lintap="onComment"  /> -->
    <!-- <l-list title="消息" icon="notification" bind:lintap="onMessage" badge-count="99"  badge-position="right" badge-max-count="99" /> -->
  </view>
  <l-dialog show="{{showSettingDialog}}" type="confirm" title="授权"
    content="请先授权我们获取您的收货地址" bind:linconfirm="onConfirm" />
</view>

