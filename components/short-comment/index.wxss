.post-container {
  background: #fff;
}

.header {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
}

.tip {
  font-size: 28rpx;
  color: #999;
  margin-left: 20rpx;
}

.tags {
  padding: 20rpx 0;
}

.post-input {
  display: flex;
  align-items: center;
  justify-content: center;
}

.post-input > input {
  flex: 1;
  height: 70rpx;
  border-radius: 10rpx;
  border: 1rpx solid #f5f5f5;
  font-size: 28rpx;
  color: #999;
  padding: 0 25rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #aaa;
  margin-left: 20rpx;
  z-index: 0;
}
