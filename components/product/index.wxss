/* components/product/product.wxss */
.life-container {
  width: 350rpx !important;
  padding: 0 0 20rpx 0 !important;
  background-color: #f2f2f2 !important;
  box-shadow: 0px 8rpx 20rpx 0px rgba(9, 36, 66, 0.04) !important;
  border-radius: 16rpx !important;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.life-img {
  width: 350rpx !important;
  height: 380rpx !important;
}

.life-product-contianer {
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
}

.life-title {
  margin-left: 20rpx !important;
}

.art-content {
  font-size: 28rpx;
  color: #999;
  margin-top: 15rpx;
  display: flex;
  flex-wrap: wrap;
}

.price-container {
  margin-top: 5rpx;
  height: 30rpx;
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.price {
  margin-right: 10rpx;
}
