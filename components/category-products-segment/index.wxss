.container {
  display: flex;
}

.left-bar {
  border-right: 1rpx solid #f2f2f2;
}

.content-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  width: 90vw;
  height: 1300rpx;
}

.header-img {
  margin: 10rpx;
  width: 520rpx;
  height: 200rpx;
}

.title-box {
  display: flex;
  align-items: center;
}

.title-line {
  height: 1rpx;
  width: 40rpx;
  border-top: 1rpx solid #999;
}

.title {
  color: #999;
  font-size: 32rpx;
  margin: 0 20rpx;
}

.products {
  display: flex;
  flex-wrap: wrap;
  width: 520rpx;
}

.product {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33%;
  margin-top: 20rpx;
}

.product-img {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}

.product-name {
  color: #999;
  font-size: 25rpx;
  width: 100rpx;
}

.more {
  display: flex;
  justify-content: flex-end;
  width: 100%;
  margin-top: 50rpx;
  margin-right: 100rpx;
  color: #999;
}
