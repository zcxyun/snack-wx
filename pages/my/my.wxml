<view class="container">
  <view class="avatar-box">
    <l-avatar
      wx:if="{{authorized}}"
      text="{{userInfo.nickName}}"
      placement="right"
      size="80"
      src="{{userInfo.avatarUrl}}"
      l-text-class="avatar-text" />
    <l-button
      wx:else
      special="{{true}}"
      open-type="getUserInfo"
      bind:getuserinfo="onGetUserInfo">
      <l-avatar
        size="80"
        icon="user"
        text="登录"
        icon-color="#2c61b4"
        l-text-class="avatar-text" />
    </l-button>
  </view>
  <view class="menu-list">
    <l-list title="订单" icon="order" badge-count="8" badge-position="right" badge-max-count="99" />
    <l-list title="地址" icon="address" />
    <l-list title="评论" icon="comment"  />
    <l-list title="消息" icon="notification" badge-count="99"  badge-position="right" badge-max-count="99" />
    <l-list title="客服" icon="customer-service" />
  </view>
</view>
