.search-bar-container {
  width: 100vw;
  position: fixed;
  top: 0;
  z-index: 99;
}

.keyword-container {
  padding: 50rpx 25rpx;
  margin-top: 60rpx;
}

.header {
  display: flex;
  align-items: center;
}

.vertical-line {
  border-left: 3px solid #000;
  width: 0;
  height: 30rpx;
  margin-right: 20rpx;
}

.title {
  font-size: 30rpx;
}

.tags-box > z-tags > view {
  margin: 30rpx 20rpx;
}

.search-result {
  margin-top: 100rpx;
  width: 100%;
}
