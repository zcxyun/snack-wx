/* components/product-foot-bar/index.wxss */
.foot-bar-container {
  position: fixed;
  bottom: 0;
  display: flex;
  height: 100rpx;
  width: 100%;
}

.home-cart-box {
  flex: 1;
  display: flex;
  font-size: 20rpx;
  justify-content: space-evenly;
  background: #f2f2f2;
}

.home-box {
  flex-direction: column;
}

.cart-box {
  flex-direction: column;
}

.add-cart {
  flex: 1;
  background: #E6A23C;
  color: #fff;
  font-size: 30rpx;
}

.buy {
  flex: 1;
  font-size: 30rpx;
  background: #F56C6C;
  color: #fff;
}

.center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.option-box {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 100;
}

.foot-button-cart {
  width: 100%;
  height: 80rpx;
  background: #E6A23C;
  color: #fff;
}

.foot-button-buy {
  width: 100%;
  height: 80rpx;
  background: #F56C6C;
  color: #fff;
}

.price-box {
  margin-top: 20rpx;
}

.old-price {
  margin-left: 20rpx;
}

.product-nums-box {
  display: flex;
  margin-top: 50rpx;
}

.product-nums-text {
  margin-right: 80rpx;
}

.no-stock {
  margin-top: 50rpx;
  color: #F56C6C;
}

