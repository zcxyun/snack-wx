.avatar-box {
  position: fixed;
  z-index: 99;
  top: 30rpx;
  left: 80rpx;
}

.avatar-text {
  font-size: 35rpx !important;
  color: #777 !important;
}

.header-box {
  background: #409EFF;
  height: 350rpx;
  width: 100vw;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header {
  background: #ffffff;
  box-shadow: 0px 0px 6px 2px #777;
  height: 250rpx;
  width: 90vw;
  box-sizing: border-box;
  display: flex;
  align-items: flex-end;
  padding-bottom: 30rpx;
}

.separator {
  height: 50rpx;
  width: 0;
  border-left: 1rpx solid #ddd;
  margin-bottom: 10rpx;
}

.info-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.like-num {
  font-weight: 500;
  color: #409EFF;
  font-size: 32rpx;
}

.header-text {
  color: #999;
  font-size: 25rpx;
}

.order-box {
  width: 90vw;
  margin-top: 30rpx;
  box-shadow: 0px 0px 6px 4px #f2f2f2;
  padding: 20rpx 40rpx;
  font-size: 25rpx;
  box-sizing: border-box;
}

.order-headerline {
  font-weight: 500;
  margin-bottom: 30rpx;
}

.order-menu {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.order-menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #666;
}

.order-menu-item > text {
  margin-top: 10rpx;
}



.menu-list {
  box-sizing: border-box;
  padding: 30rpx 40rpx;
  width: 100%;
}
