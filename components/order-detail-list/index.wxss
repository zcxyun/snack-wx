.products-box {
  margin-top: 20rpx;
  background: #fff;
  display: flex;
  width: 100vw;
  padding: 20rpx 25rpx 40rpx;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

.product-box {
  display: flex;
  box-shadow: 0px 0px 6px 3px #eee;
  padding: 15rpx;
  width: 90vw;
  margin-top: 20rpx;
}

.product-img {
  width: 130rpx;
  height: 130rpx;
}

.product-content {
  flex: 1;
  color: #666;
  padding: 10rpx;
}

.product-price-box {
  display: flex;
  flex-direction: column;
  padding: 0 10rpx;
  align-items: flex-end;
}

.product-count-box {
  margin-top: 14rpx;
  display: flex;
  height: 20rpx;
  align-items: center;
}

.product-count {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #999;
}
